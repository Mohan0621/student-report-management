<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="/css/style.css">

    <style>
        body {
            background: #f4f4f4;
            padding: 40px 0;
        }

        .report-card {
            width: 70%;
            margin: auto;
            background: #fff;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.12);
            animation: fadeIn 0.5s ease;
        }

        h2 {
            text-align: center;
            margin-bottom: 5px;
            font-size: 28px;
            color: #6a11cb;
        }

        .sub-title {
            text-align: center;
            color: #555;
            margin-bottom: 25px;
        }

        .student-info {
            background: #fafafa;
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 25px;
            border-left: 4px solid #6a11cb;
        }

        .student-info p {
            margin: 6px 0;
            font-size: 16px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 25px;
        }

        th {
            background: #6a11cb;
            color: white;
            padding: 12px;
            font-size: 16px;
        }

        td {
            padding: 12px;
            border-bottom: 1px solid #ddd;
            font-size: 15px;
        }

        .summary-box {
            background: #fafafa;
            padding: 20px;
            border-radius: 10px;
            border-left: 4px solid #6a11cb;
            margin-top: 25px;
        }

        .summary-box p {
            margin: 6px 0;
            font-size: 17px;
            font-weight: 600;
        }

        .grade {
            font-size: 22px;
            font-weight: bold;
            color: #6a11cb;
        }

        .btn-back {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 18px;
            background: #6a11cb;
            color: white;
            border-radius: 8px;
            text-decoration: none;
            transition: 0.3s;
        }

        .btn-back:hover {
            background: #4c0ea3;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>

<body>

<div class="report-card">
    <h2>Student Report Card</h2>
    <p class="sub-title">Academic Performance Overview</p>

    <!-- Student Info -->
    <div class="student-info">
        <p><strong>Name:</strong> <%= student.username %></p>
        <p><strong>Email:</strong> <%= student.email %></p>
        <p><strong>Class:</strong> <%= student.class %></p>
        <p><strong>Roll No:</strong> <%= student.roll_no %></p>
    </div>

    <!-- Marks Table -->
    <table>
        <thead>
            <tr>
                <th>Subject</th>
                <th>Marks Obtained</th>
                <th>Total Marks</th>
                <th>Test Name</th>
                <th>Percentage (%)</th>
            </tr>
        </thead>

        <tbody>
            <% marks.forEach(mark => { %>
            <tr>
                <td><%= mark.subject_name %></td>
                <td><%= mark.marks_obtained %></td>
                <td><%= mark.total_marks %></td>
                <td><%= mark.test_name %></td>
                <td><%= ((mark.marks_obtained / mark.total_marks) * 100).toFixed(2) %>%</td>
            </tr>
            <% }) %>
        </tbody>
    </table>

    <!-- Final Summary -->
    <div class="summary-box">
        <p>Total Obtained: <%= totalObtained %></p>
        <p>Total Maximum: <%= totalMax %></p>
        <p>Overall Percentage: <%= percentage %> %</p>
        <p class="grade">Final Grade: <%= grade %></p>
    </div>

    <a href="/students" class="btn-back">‚Üê Back to Students</a>
</div>

</body>
</html>
