<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .table-container {
            width: 80%;
            margin: 40px auto;
            background: white;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 5px 25px rgba(0,0,0,0.1);
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 15px;
        }

        th, td {
            padding: 12px 10px;
            border-bottom: 1px solid #ddd;
            text-align: left;
        }

        th {
            background: #6a11cb;
            color: #fff;
        }

        .btn {
            padding: 6px 12px;
            border-radius: 6px;
            text-decoration: none;
            color: white;
            font-size: 14px;
        }

        .add-btn { background: #28a745; float: right; padding: 9px 15px; }
        .edit-btn { background: #3498db; }
        .delete-btn { background: #e74c3c; }
    </style>
</head>
<body>

<div class="table-container">

    <h2>Subjects</h2>

    <a href="/subjects/add" class="btn add-btn">+ Add Subject</a>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Subject Name</th>
                <th>Class</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            <% subjects.forEach(subject => { %>
            <tr>
                <td><%= subject.id %></td>
                <td><%= subject.subject_name %></td>
                <td><%= subject.class %></td>

                <td>
                    <a href="/subjects/edit/<%= subject.id %>" class="btn edit-btn">Edit</a>
                    <a href="/subjects/delete/<%= subject.id %>" class="btn delete-btn">Delete</a>
                </td>
            </tr>
            <% }) %>
        </tbody>

    </table>
</div>

</body>
</html>
